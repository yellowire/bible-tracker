<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:id="@android:id/background" >
        <shape android:shape="rectangle">
            <corners android:radius="20dp" />
            <size android:height="20dp" />
            <solid android:color="@color/lightGrey" />
            <stroke android:color="@color/darkGrey" android:width="1dp" />
        </shape>
    </item>

    <item android:id="@android:id/secondaryProgress">
        <clip android:clipOrientation="horizontal">
            <shape android:shape="rectangle">
                <corners android:radius="20dp" />
                <size android:height="20dp" />
                <solid android:color="@color/colorPrimaryLight" />
                <stroke android:width="1dp" android:color="@color/darkGrey" />
            </shape>
        </clip>
    </item>

    <item android:id="@android:id/progress" android:top="5dp" android:bottom="5dp">
        <clip>
            <shape android:shape="rectangle">
                <corners android:radius="7.5dp"/>
                <size android:height="20dp" />
                <solid android:color="@color/colorPrimary" />
                <stroke android:color="@color/darkGrey" android:width="1dp" />
            </shape>
        </clip>
    </item>
</layer-list>